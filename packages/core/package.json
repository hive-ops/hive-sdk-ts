{
  "name": "@hiveops/core",
  "version": "0.0.10",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "dev": "nodemon src/main.ts",
    "clean": "rm -rf lib/",
    "build": "npm run clean && tsc",
    "fix": "eslint --fix -c .eslintrc.js 'src/**/*' && prettier 'src/**/*.ts' --write",
    "check": "eslint -c .eslintrc.js 'src/**/*' && prettier 'src/**/*.ts'  --list-different",
    "unit-test": "jest uspec --maxWorkers=2 --passWithNoTests",
    "update": "npm update"
  },
  "keywords": [],
  "author": "HiveOps",
  "license": "Apache-2.0",
  "files": [
    "lib/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/hive-ops/hive-sdk-ts.git",
    "directory": "packages/core"
  },
  "jest": {
    "automock": false,
    "transform": {
      ".(ts)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(\\.(ispec|uspec))\\.(ts)$",
    "roots": [
      "<rootDir>/src"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "setupFiles": [
      "<rootDir>/src/tests/testEnv.js"
    ]
  },
  "dependencies": {
    "@bufbuild/protobuf": "^1.10.0",
    "@connectrpc/connect": "^1.6.1",
    "@grpc/grpc-js": "^1.12.2",
    "lodash": "^4.17.21",
    "neverthrow": "^8.2.0"
  },
  "devDependencies": {
    "@types/lodash": "^4.17.16",
    "@types/node": "^22.10.0",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "dotenv": "^16.3.1",
    "eslint": "^8",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsdoc": "^39.6.7",
    "eslint-plugin-neverthrow": "^1.1.4",
    "eslint-plugin-typescript": "^0.14.0",
    "nodemon": "^3.1.7",
    "prettier": "^2.8.3",
    "ts-node": "^10.9.1"
  }
}
